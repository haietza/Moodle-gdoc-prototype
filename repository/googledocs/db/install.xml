<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="repository/googledocs/db" VERSION="20160811" COMMENT="XMLDB file for Moodle repository/googledocs"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="google_refreshtokens" COMMENT="Store userids, refreshtokenids and gmail address for users">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="User's id"/>
        <FIELD NAME="refreshtokenid" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Refresh token aqcuired from Google offline ap"/>
        <FIELD NAME="gmail" TYPE="char" LENGTH="60" NOTNULL="false" DEFAULT="null" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="useridindex" UNIQUE="true" FIELDS="userid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="google_files_reference" COMMENT="Store course module ids and corresponding reference ids">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="cmid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Course module id"/>
        <FIELD NAME="reference" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="File reference"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="cmidindex" UNIQUE="true" FIELDS="cmid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>